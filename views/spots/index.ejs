<% layout('layouts/boilerplate')%>

<div id="cluster-map"></div>

<h1>All Spots</h1>
<div>
    <a href="/spots/new">Add Spot</a>
</div>
<% for (let spot of spots){%>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <% if(spot.images.length) {%>
            <img class="img-fluid" alt="" src="<%=spot.images[0].url%>">
            <% }else {%>
            <img class="img-fluid"
             src="https://res.cloudinary.com/difdkfeiw/image/upload/v1638976980/PlanVel/noImage_uwhhkw.jpg" alt="no image">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= spot.title %> </h5>
                <p class="card-text"><%= spot.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= spot.locationCityProv%> - <%= spot.locationAddress%></small>
                </p>
                <a class="btn btn-primary" href="/spots/<%=spot._id%>">View <%=spot.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const spots = {features: <%- JSON.stringify(spots) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>